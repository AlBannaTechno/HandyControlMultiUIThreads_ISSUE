<Window x:Class="WpfApp.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock>Second Window</TextBlock>

        <!-- 
            you can not do this
            Style="{StaticResource ButtonPrimary}"
            because second window does not load the resource from App.xaml
            and we can not create multiple App.xaml, because this is a one per appDomain
            so you must use dynamic resources, to load it from memory, with shared read-only access privilege
        -->
        <Button
           Style="{DynamicResource ButtonPrimary}"
        >Ok S</Button>
    </StackPanel>
</Window>
